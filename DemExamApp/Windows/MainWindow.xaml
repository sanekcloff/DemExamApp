<Window x:Class="DemExamApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemExamApp.Windows"
        mc:Ignorable="d"
        Title="Окно просмотра материалов" Height="450" Width="800" Icon="\Assets\Мозаика.ico"
        FontFamily="Comic Sans MS">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Image Grid.Row="0" Source="\Assets\Мозаика.png" Stretch="Uniform" Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Margin="5" Width="40" x:Name="AddMaterialButton" Click="AddMaterialButton_Click"/>
        </StackPanel>
        <ListView x:Name="MaterialsListView" Grid.Row="1" MouseDoubleClick="MaterialsListView_MouseDoubleClick" >

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">

                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Margin="10" HorizontalAlignment="Stretch" Height="120">
                                    
                                    <Grid Margin="20,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">

                                            <TextBlock Text="{Binding CombinedTypeAndTitle}" FontSize="20"/>
                                            <TextBlock Text="{Binding MinCountText}" FontSize="14"/>
                                            <TextBlock Text="{Binding CountOnStorageText}" FontSize="14"/>
                                            <TextBlock Text="{Binding CombinedPriceAndUnit}" FontSize="14"/>

                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right">

                                            <TextBlock Text="{Binding BatchOfMaterials}" FontSize="20"/>

                                        </StackPanel>

                                    </Grid>
                                    
                                </Border>
                                
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            
        </ListView>
    </Grid>
</Window>
