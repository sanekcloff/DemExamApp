<Window x:Class="DemExamApp.Windows.MaterialManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemExamApp.Windows"
        mc:Ignorable="d"
        Title="MaterialManageWindow" Height="450" Width="300" Icon="\Assets\Мозаика.ico"
        FontFamily="Comic Sans MS">
    
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Center">

            <TextBox x:Name="TitleTextBox" TextChanged="TitleTextBox_TextChanged"/>

            <ComboBox x:Name="MaterialTypeComboBox" />

            <TextBox x:Name="CountOnStorageTextBox" TextChanged="CountOnStorageTextBox_TextChanged"/>
            
            <TextBox x:Name="MeasurementTextBox" TextChanged="MeasurementTextBox_TextChanged" />
            
            <TextBox x:Name="CountInPackageTextBox" TextChanged="CountInPackageTextBox_TextChanged" />
            
            <TextBox x:Name="MinCountTextBox" TextChanged="MinCountTextBox_TextChanged" />
            
            <TextBox x:Name="CostPerUnitTextBox" TextChanged="CostPerUnitTextBox_TextChanged" />

        </StackPanel>
        
    </Grid>
    
</Window>
